<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools" android:id="@+id/activity_main" android:layout_width="match_parent" android:layout_height="match_parent" tools:context="com.android.xenagogy.MainActivity">
	<LinearLayout android:id="@+id/layout_function" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_alignParentTop="true" android:orientation="horizontal">
		<Button android:id="@+id/button_partial_update" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onClick" android:text="Partial Update" />
		<Button android:id="@+id/button_regal_partial" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onClick" android:text="Regal Partial" />
		<Button android:id="@+id/button_screen_refresh" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onClick" android:text="Full Update" />
		<Button android:id="@+id/button_enter_fast_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:onClick="onClick" android:text="Enter Fast Mode" />
	</LinearLayout>
	<Button android:id="@+id/button_quit_fast_mode" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_below="@id/layout_function" android:onClick="onClick" android:text="Quit Fast Mode" />
	<LinearLayout android:id="@+id/fast_mode_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_below="@+id/button_quit_fast_mode" android:orientation="horizontal">
		<Button android:id="@+id/button_enter_normal_mode" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="onClick" android:text="Enter normal Mode" />
		<Button android:id="@+id/button_enter_du_mode" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="onClick" android:text="Enter DU Mode" />
		<Button android:id="@+id/button_enter_A2_mode" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="onClick" android:text="Enter A2 Mode" />
		<Button android:id="@+id/button_enter_x_mode" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:onClick="onClick" android:text="Enter X Mode" />
	</LinearLayout> -->
	<TextView android:id="@+id/textview" android:layout_width="match_parent" android:layout_height="200dp" android:layout_below="@id/fast_mode_layout" android:layout_marginTop="-1dp" android:background="@android:color/darker_gray" android:text="Hello World!" android:textColor="@android:color/black" android:textSize="20sp" />
	<SurfaceView android:id="@+id/surfaceview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_below="@id/textview" android:background="@android:color/white" />
</RelativeLayout>
