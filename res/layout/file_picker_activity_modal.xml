<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:gravity="center"
	android:background="@android:color/white"
	android:visibility="gone">
	<LinearLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:gravity="right"
		android:background="@drawable/solid_empty"
		android:padding="6dp">
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/white">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textColor="@android:color/black"
				android:textSize="34dp"
				android:background="@android:color/white"
				android:text="Palm threshold:" />
			<EditText android:id="@+id/file_picker_activity_modal_edit_palm"
				android:layout_width="200dp"
				android:layout_height="60dp"
				android:gravity="center"
				android:inputType="number"
				android:textColor="@android:color/black"
				android:background="@drawable/solid_empty"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textSize="34dp" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/white">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textColor="@android:color/black"
				android:textSize="34dp"
				android:background="@android:color/white"
				android:text="Update while panning:" />
			<ImageView android:id="@+id/file_picker_activity_modal_edit_pan_update"
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:background="@drawable/solid_filled"
				android:onClick="onClick" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/white">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textColor="@android:color/black"
				android:textSize="34dp"
				android:background="@android:color/white"
				android:text="Draw refresh delay:" />
			<EditText android:id="@+id/file_picker_activity_modal_edit_draw_refresh"
				android:layout_width="200dp"
				android:layout_height="60dp"
				android:gravity="center"
				android:inputType="number"
				android:textColor="@android:color/black"
				android:background="@drawable/solid_empty"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textSize="34dp" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/white">
			<TextView
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textColor="@android:color/black"
				android:textSize="34dp"
				android:background="@android:color/white"
				android:text="Flick distance:" />
			<EditText android:id="@+id/file_picker_activity_modal_edit_flick_distance"
				android:layout_width="200dp"
				android:layout_height="60dp"
				android:gravity="center"
				android:inputType="number"
				android:textColor="@android:color/black"
				android:background="@drawable/solid_empty"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textSize="34dp" />
		</LinearLayout>
		<LinearLayout
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:gravity="center"
			android:background="@android:color/white">
			<Button android:id="@+id/file_picker_activity_modal_button_cancel"
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textSize="34dp"
				android:textColor="@android:color/black"
				android:background="@drawable/solid_empty"
				android:text="CANCEL"
				android:onClick="onClick" />
			<Button android:id="@+id/file_picker_activity_modal_button_set"
				android:layout_width="wrap_content"
				android:layout_height="60dp"
				android:layout_margin="6dp"
				android:paddingLeft="12dp"
				android:paddingTop="6dp"
				android:paddingRight="12dp"
				android:paddingBottom="6dp"
				android:textSize="34dp"
				android:textColor="@android:color/black"
				android:background="@drawable/solid_empty"
				android:text="SET"
				android:onClick="onClick" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>
