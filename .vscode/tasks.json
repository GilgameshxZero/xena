{
	"version": "2.0.0",
	"tasks": [
		{
			/* Remove the intermediates directory obj/ and the output directory bin/. */
			"type": "shell",
			"label": "clean",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true, "reveal": "silent" },

			"command": "make",
			"args": ["clean"],
			"windows": { "command": "nmake" }
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "logcat",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },

			"command": "adb shell logcat *:E *:W *:V"
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "build-debug",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },
			"group": "build",

			"command": "nmake",
			"args": ["build"]
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "build-release",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },
			"group": "build",

			"command": "nmake",
			"args": ["build", "BUILD=1"]
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "run-debug",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },

			"command": "nmake",
			"args": ["run"]
		},
		{
			/* Build the open file in release mode. */
			"type": "shell",
			"label": "run-release",
			"options": { "cwd": "${workspaceFolder}/build" },
			"presentation": { "clear": true },

			"command": "nmake",
			"args": ["run", "BUILD=1"]
		}
	]
}
