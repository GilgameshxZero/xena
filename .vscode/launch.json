{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "debug-apk",
			"type": "node-terminal",
			"request": "launch",
			"cwd": "${workspaceFolder}/build",
			"command": "nmake run-apk"
		},
		{
			"name": "release-apk",
			"type": "node-terminal",
			"request": "launch",
			"cwd": "${workspaceFolder}/build",
			"command": "nmake run-apk BUILD=1",
			"timeout": 1
		},
		{
			"name": "debug-exe-x64",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.bin/src/xena.debug.x64",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/.bin/src",
			"console": "integratedTerminal",
			"preLaunchTask": "build-exe-debug",
			"MIMode": "gdb",

			"windows": { "type": "cppvsdbg" },
			"osx": { "MIMode": "lldb" }
		},
		{
			"name": "release-exe-x64",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/.bin/src/xena.release.x64",
			"args": [],
			"stopAtEntry": false,
			"cwd": "${workspaceFolder}/.bin/src",
			"console": "integratedTerminal",
			"preLaunchTask": "build-exe-release",
			"MIMode": "gdb",

			"windows": { "type": "cppvsdbg" },
			"osx": { "MIMode": "lldb" }
		}
	]
}
